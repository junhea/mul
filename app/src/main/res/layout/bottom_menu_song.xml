<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/colorDarkWindowBackground"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/bottom_cover"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/music_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_handle"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bottom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:drawableTint="@android:color/white"
                android:gravity="start|center_vertical"
                android:text="name"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/bottom_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:gravity="start|center_vertical"
                android:text="artist"
                android:textColor="#AAAAAA"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/bottom_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:gravity="start|center_vertical"
                android:text="path"
                android:textColor="#AAAAAA"
                android:textSize="10sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/bottom_menu_play"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/player_start"
        android:drawableTint="@android:color/white"
        android:gravity="start|center_vertical"
        android:text="@string/bottom_menu_play"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/bottom_menu_delete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/delete"
        android:drawableTint="@android:color/white"
        android:gravity="start|center_vertical"
        android:text="@string/bottom_menu_delete"
        android:textColor="@android:color/white"
        android:textSize="16sp" />



</androidx.appcompat.widget.LinearLayoutCompat>